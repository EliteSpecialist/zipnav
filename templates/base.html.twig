<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ZIPNAV{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/cosmo/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary mb-3">
            <div class="container">
                <a href="/" class="navbar-brand">ZIPNAV</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mobile-nav">
                    <span class="navbar-toggle-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mobile-nav">
                    <ul class="navbar-nav ml-auto">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <!-- Create Drop Down menu's -->
                        <li class="nav-item ">
                          <li class="dropdown show">
                            <a href="/airport" class="nav-link dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Airports
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                              <a class="dropdown-item" href="/airport">List</a>
                              <a class="dropdown-item" href="/airport/new">New</a>
                            </div>
                          </li>
                        </li>

                        <li class="nav-item ">
                          <li class="dropdown show">
                            <a href="/flight" class="nav-link dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Flights
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                              <a class="dropdown-item" href="/flight">List</a>
                              <a class="dropdown-item" href="/flight/new">New</a>
                            </div>
                          </li>
                        </li>
                        <li class="nav-item ">
                          <li class="dropdown show">
                            <a href="/flight" class="nav-link dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Hi {{ app.user.username }}
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                              <a class="dropdown-item" href="/logout">Logout</a>
                            </div>
                          </li>
                        </li>
                        {% else %}
                        <li class="nav-item ">
                          <a href="/login" class="nav-link" role="button" id="dropdownMenuLink" aria-haspopup="true" aria-expanded="false">
                            Login
                          </a>
                        </li>
                        <li class="nav-item ">
                          <a href="/register" class="nav-link" role="button" id="dropdownMenuLink" aria-haspopup="true" aria-expanded="false">
                            Register
                          </a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
        {% block body %}{% endblock %}
        </div>
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
